<p id="notice"><%= notice %></p>

<h1>Feeds</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag(feed.image.url) if feed.image && feed.image.url %></td>
        <td><%= feed.user.name %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to "ブログを編集する", edit_feed_path(feed.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= button_to 'ブログを削除する', feed_path(feed.id), method: :delete ,data: { confirm: '本当に削除してもいいですか？'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
